          <h2 class="sub-header">Section title</h2>
          <div class="table-responsive">

            <ul id="todo-list" class="unstyled">
                <% @tasks.each do |task| %>
                  <li id="<%= task[:id] %>">
                  <span class="task">
                    <%= task[:done] ? "<del>#{task[:todo]}</del>" : task[:todo] %>
                  </span>

                  <span class="pull-right">
                    <a href="#" class="btn done"><%= task[:done] ? "Not done" : "Done"%></a>
                    <a href="/delete/<%= task[:id] %>" class="btn btn-danger">Delete</a>
                  </span>
                  
                  </li>
                <% end %>
              </ul>
              <a href="/new/task">Add new task</a>          
          </div>
